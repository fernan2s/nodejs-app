apiVersion: apps/v1
kind: Deployment
metadata:
  name: appnode-deployment
  labels:
     app: appnode
     type: front-end
spec:
  template:
     metadata:
       name: appnodejs-pod
       labels:
         app: appnodejs
         type: front-end
     spec:
         containers:
           - name: nodedocker
             image: "fernan2/nodesjs-app"
#             image: "ghcr.io/benc-uk/nodejs-demoapp"
  replicas: 1
  selector:
    matchLabels:
      type: front-end

---
apiVersion: v1
kind: Service
metadata:
  name: appnodejs-service
spec:
  selector:
    app: appnodejs
  type: LoadBalancer
  ports:
    - protocol: TCP
      targetPort: 3000
      port: 80
